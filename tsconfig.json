{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/**/*.js",  // Incluye todos los archivos .js en la carpeta components
    "components/**/*.jsx"  // Incluye todos los archivos .jsx en la carpeta components
  ]
}
